<iframe
  width="640"
  height="360"
  src="https://www.youtube.com/embed/<%= @post.youtube_url%>"
  frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
  allowfullscreen>
</iframe>


<% if logged_in? %>
  <h3>いいね件数: <%= @post.likes.count %></h3>
  <h3>コメント件数: <%= @post.comments.count %></h3>
  <% if current_user.already_liked?(@post) %>
    <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
  <% else %>
    <%= button_to 'いいね', post_likes_path(@post) %>
  <% end %>
  <h2>いいねしたユーザー</h2>
  <% @post.liked_users.each do |user| %>
    <li><%= user.email %></li>
  <% end %>


  <h2>コメント一覧</h2>
  <% @comments.each do |c| %>
    <div>
      <a href="/users/<%= @post.user.id %>"><%= c.user.email %></a>
      <%= c.content %>
      <hr>
    </div>
  <% end %>

  <%= form_for [@post, @comment] do |f| %>
    <%= f.text_field :content %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <br>
    <%= f.submit 'コメントする' %>
  <% end %>


<% end %>
