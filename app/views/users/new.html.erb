<main id="contents" class="site-width">
    <div class="form-container">
      <div class="row">
          <%= form_for(@user, url: signup_path, html: { class: "form" }) do |f| %>
            <h2 class="site-title">ユーザー登録</h2>
            <%= render "shared/error_messages", object: f.object %>
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class:"form__name" %>

            <%= f.label :email %>
            <%= f.email_field :email, class:"form__email" %>

            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class:"form__pass" %>

            <%= f.label :password_confirmation, "パスワード(再入力)" %>
            <%= f.password_field :password_confirmation, class: "form__repass" %>

            <%= f.submit "登録する", class: "form__submit" %>
          <% end %>
        </div>
      </div>

      <p>検索</p>


      <div id="search">
        <%= form_tag(search_path, method: :get) do %>
              <div class="search__select-box">
                <%= text_field_tag :search, @search_word, placeholder: "検索" %>
              </div>
            <%= submit_tag 'Search', name: :nil %>
        <% end %>
      </div>
      <form method="get" action="http://www.google.co.jp/search" target="_blank">
        <input type="text" name="q" size="31" maxlength="255" value="今日の天気">
        <input type="submit" name="btng" value="検索">
        <input type="hidden" name="hl" value="ja">
      </form>
  </main>
