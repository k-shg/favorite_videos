<main id="contents" class="site-width">
    <div class="form-container">

        <%= form_for(@user, url: signup_path, html: { class: "form" }) do |f| %>
          <h2 class="site-title">ユーザー登録</h2>
          <%= render "shared/error_messages", object: f.object %>
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class:"form__name" %>

          <%= f.label :email %>
          <%= f.email_field :email, class:"form__email" %>

          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class:"form__pass" %>

          <%= f.label :password_confirmation, "パスワード(再入力)" %>
          <%= f.password_field :password_confirmation, class: "form__repass" %>

          <%= content_tag(:div, class:"btn-container-login") do
                f.submit "登録する", class: "form__signin btn btn-mid"
          end %>

        <% end %>
      </div>


  </main>
